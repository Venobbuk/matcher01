       $all_brands = [];
       
       foreach (['cuban', 'non_cuban'] as $section) {
           if (isset(self::$data_file['brands'][$section])) {
               foreach (self::$data_file['brands'][$section] as $brand => $variations) {
                   $all_brands[$brand] = [
                       'type' => $section,
                       'variations' => $variations
                   ];
               }
           }
       }
       
       return $all_brands;
   }
   
