       self::init();
       
       if (!isset(self::$data_file['series'][$brand])) {
           self::$data_file['series'][$brand] = [];
       }
       
       self::$data_file['series'][$brand][$series] = $variations;
       
       KT_Cigar_Debug::log("Added series mapping for " . $brand . ": " . $series . " with " . count($variations) . " variations");
   }
   
